<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rafif.com.baymap.Activity.RegisterActivity"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/posttestregister"
            android:layout_marginBottom="20dp"
            android:text="Sign up"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Your username"
            android:textSize="18dp"
            android:id="@+id/edtText_Register_username"
            android:inputType="text"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/posttestregister"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Your name"
            android:textSize="18dp"
            android:id="@+id/edtText_Register_name"
            android:inputType="text"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/edtText_Register_username"
            />



        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Email@example"
            android:layout_below="@id/edtText_Register_name"
            android:id="@+id/edtText_Register_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:background="@android:color/white"
            />





        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"
            android:id="@+id/edtText_Register_password"
            android:layout_below="@id/edtText_Register_email"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Konfirmasi password"
            android:id="@+id/edtText_Register_konfimasiPassword"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_below="@id/edtText_Register_password"

            />

        <Button
            android:layout_below="@id/edtText_Register_konfimasiPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Register"
            android:drawablePadding="-20dp"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/white"
            android:id="@+id/btn_Register"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun?Login Disini"
            android:layout_marginTop="5dp"
            android:layout_below="@id/btn_Register"
            android:textColor="@android:color/white"
            android:id="@+id/btn_Login_LoginLink"
            android:textSize="15dp"
            android:background="@null"
            android:textAllCaps="false"
            />
    </RelativeLayout>
</RelativeLayout>
